<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Constant">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="100"
                sl:scale_base_height="14"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edSearch"
                    android:paddingLeft="35dp"
                    android:paddingRight="52dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    sl:scale_left="0"
                    sl:scale_top="0"
                    sl:scale_width="86"
                    sl:scale_height="14"
                    sl:scale_textsize="5.4"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/home_search_input"></EditText>
                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    sl:scale_left="86"
                    sl:scale_top="0"
                    sl:scale_width="14"
                    sl:scale_height="14"
                    android:layout_weight="1"
                    android:background="@drawable/home_search_s"
                    />
            </com.nhm.timphong.util.ScalableLayout>
            <com.nhm.timphong.util.ScalableLayout
                android:id="@+id/llViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="100"
                sl:scale_base_height="44"
                android:gravity="center"
                android:orientation="vertical">
            </com.nhm.timphong.util.ScalableLayout>
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/main_textview"
                sl:scale_base_width="400"
                sl:scale_base_height="66">
                <Button
                    android:id="@+id/btnSearchMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_left="15"
                    sl:scale_top="0"
                    sl:scale_width="185"
                    sl:scale_height="66"
                    android:layout_weight="1"
                    android:background="@drawable/btn_searchmap"
                    />
                <Button
                    android:id="@+id/btnSearchRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_left="200"
                    sl:scale_top="0"
                    sl:scale_width="185"
                    sl:scale_height="66"
                    android:layout_weight="1"
                    android:background="@drawable/btn_searchregion"
                    />
            </com.nhm.timphong.util.ScalableLayout>
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                sl:scale_base_width="400"
                sl:scale_base_height="40"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    sl:scale_left="0"
                    sl:scale_top="0"
                    sl:scale_width="400"
                    sl:scale_height="40"
                    android:background="@drawable/home_theme"/>
            </com.nhm.timphong.util.ScalableLayout>
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="400"
                sl:scale_base_height="105"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnHomeOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_left="15"
                    sl:scale_top="0"
                    sl:scale_width="123"
                    sl:scale_height="105"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_one"
                    />
                <Button
                    android:id="@+id/btnHomeRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_left="138"
                    sl:scale_top="0"
                    sl:scale_width="123"
                    sl:scale_height="105"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_row"
                    />
                <Button
                    android:id="@+id/btnHomeStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_left="261"
                    sl:scale_top="0"
                    sl:scale_width="122"
                    sl:scale_height="105"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_store"
                    />
            </com.nhm.timphong.util.ScalableLayout>
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="400"
                sl:scale_base_height="105"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnHomeOffice"
                    android:layout_width="130dp"
                    android:layout_height="85dp"
                    sl:scale_left="15"
                    sl:scale_top="0"
                    sl:scale_width="123"
                    sl:scale_height="105"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_office"
                    />
                <Button
                    android:id="@+id/btnHomeApart"
                    android:layout_width="130dp"
                    android:layout_height="85dp"
                    sl:scale_left="138"
                    sl:scale_top="0"
                    sl:scale_width="123"
                    sl:scale_height="105"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_apart"
                    />
                <Button
                    android:id="@+id/btnHomeDetached"
                    android:layout_width="130dp"
                    android:layout_height="85dp"
                    sl:scale_left="261"
                    sl:scale_top="0"
                    sl:scale_width="122"
                    sl:scale_height="105"
                    android:layout_weight="1"
                    android:background="@drawable/btn_home_detached"
                    />
            </com.nhm.timphong.util.ScalableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
