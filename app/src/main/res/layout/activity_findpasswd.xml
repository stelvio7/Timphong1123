<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Constant">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="100"
                sl:scale_base_height="14"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    sl:scale_left="0"
                    sl:scale_top="0"
                    sl:scale_width="100"
                    sl:scale_height="14"
                    android:background="@drawable/btnback_searchpasswd"></Button>
            </com.nhm.timphong.util.ScalableLayout>
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="400"
                sl:scale_base_height="60"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnGoSearchPasswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_left="0"
                    sl:scale_top="0"
                    sl:scale_width="400"
                    sl:scale_height="60"
                    android:layout_weight="1"
                    android:background="@drawable/pass_site_notice"
                    />
            </com.nhm.timphong.util.ScalableLayout>
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="100"
                sl:scale_base_height="15"
                android:gravity="center"
                android:orientation="vertical">
                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/edEmail"
                    whatever:testType="email"
                    whatever:emptyErrorString="@string/check_empty"
                    whatever:testErrorString="@string/check_name"
                    android:inputType="textEmailAddress"
                    android:maxLength="18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="14dp"
                    android:background="@drawable/bg"
                    sl:scale_left="0"
                    sl:scale_top="0"
                    sl:scale_width="100"
                    sl:scale_height="15"
                    sl:scale_textsize="3.7"
                    android:hint="@string/login_search_email"
                    android:paddingRight="10dp"/>
            </com.nhm.timphong.util.ScalableLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/join_line_image"/>
            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                sl:scale_base_width="100"
                sl:scale_base_height="15"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    whatever:testType="nocheck"
                    whatever:emptyErrorString="@string/check_empty"
                    whatever:testErrorString="@string/check_passwd"
                    android:inputType="textPassword"
                    android:id="@+id/edPasswd"
                    android:maxLength="26"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="14dp"
                    android:background="@drawable/bg"
                    android:gravity="center"
                    sl:scale_left="0"
                    sl:scale_top="0"
                    sl:scale_width="100"
                    sl:scale_height="15"
                    sl:scale_textsize="3.7"
                    android:hint="@string/login_search_send_email"
                    android:paddingRight="10dp"></TextView>
            </com.nhm.timphong.util.ScalableLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/join_line_image"/>

            <com.nhm.timphong.util.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                sl:scale_base_width="400"
                sl:scale_base_height="66"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSearchPasswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_left="0"
                    sl:scale_top="0"
                    sl:scale_width="400"
                    sl:scale_height="66"
                    android:background="@drawable/btn_searchpasswd"
                    />
            </com.nhm.timphong.util.ScalableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <com.nhm.timphong.util.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    sl:scale_base_width="400"
                    sl:scale_base_height="150"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        sl:scale_left="0"
                        sl:scale_top="30"
                        sl:scale_width="400"
                        sl:scale_height="70"
                        android:background="@drawable/join_logo"/>
                </com.nhm.timphong.util.ScalableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
