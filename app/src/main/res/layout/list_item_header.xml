<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    xmlns:sw="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:id="@+id/listItem"
    tools:context=".Constant">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.nhm.timphong.util.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_base_width="100"
            sl:scale_base_height="45"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_left="30"
                sl:scale_top="7"
                sl:scale_width="35"
                sl:scale_height="35"
                android:layout_weight="1"
                android:background="@drawable/mypage_photo"
                />
            <Button
                android:id="@+id/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_left="54"
                sl:scale_top="33"
                sl:scale_width="9"
                sl:scale_height="9"
                android:layout_weight="1"
                android:background="@drawable/btn_myinfo_camera"
                />
        </com.nhm.timphong.util.ScalableLayout>
        <com.nhm.timphong.util.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_base_width="100"
            sl:scale_base_height="24"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:text="홍길동"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                sl:scale_left="0"
                sl:scale_top="1"
                sl:scale_width="100"
                sl:scale_height="14"
                sl:scale_textsize="5.6"
                />
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:text="sdfsf@naver.com"
                android:gravity="center_horizontal"
                sl:scale_left="0"
                sl:scale_top="9"
                sl:scale_width="100"
                sl:scale_height="14"
                sl:scale_textsize="4"
                />
            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:text="010-XXXX-XXXX"
                android:gravity="center_horizontal"
                sl:scale_left="0"
                sl:scale_top="14"
                sl:scale_width="100"
                sl:scale_height="14"
                sl:scale_textsize="4"
                />
        </com.nhm.timphong.util.ScalableLayout>
    </LinearLayout>
</LinearLayout>

