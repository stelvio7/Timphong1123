<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    tools:context=".Constant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <com.nhm.timphong.util.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_width="400"
        sl:scale_base_height="55"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioGroupTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="400"
            sl:scale_height="55"
            android:checkedButton="@+id/radioHome"
            android:orientation="horizontal">
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/tab_home"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioInterest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/tab_interest"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioNotice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/tab_notice"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioRegistration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/tab_registration"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioMypage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/tab_mypage"/>
        </RadioGroup>
    </com.nhm.timphong.util.ScalableLayout>
</LinearLayout>
